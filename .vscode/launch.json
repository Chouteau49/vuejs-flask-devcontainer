{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app.py", // Remplace par le chemin de ton fichier principal Flask
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "env": {
                "FLASK_APP": "app.py", // Remplace par le nom de ton fichier principal Flask
                "FLASK_ENV": "development"
            }
        }
    ]
}